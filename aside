#!/bin/bash

# aside - create timestamped log entries on the fly

SUBJ=${1:-general}

BR="\n"
BREAK="\n\n"
TAB="\t"
BUL="\t\t*"

DATE=`date +"%Y%m%d"`
TIME=`date +"%T"`
HEAD=`date +"%Y %b %d"`

DIR=~/Documents/logs/$SUBJ
FILE=$DIR/$DATE.md

if [ ! -d $DIR ]; then
  mkdir -p $DIR
fi

if [ ! -f $FILE ]; then
  if [ $SUBJ != "general" ]; then
    printf "### ${SUBJ}\n" >> $FILE
  fi
  printf "# $HEAD" >> $FILE
fi

# set time header
printf "\n\n## $TIME\n\n" >> $FILE

# open logfile for writing
vi $FILE
